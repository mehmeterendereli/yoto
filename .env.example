# Yoto Yapılandırma Dosyası

# OpenAI API anahtarı
OPENAI_API_KEY=your_openai_api_key_here

# Pexels API anahtarı
PEXELS_API_KEY=your_pexels_api_key_here

# FFmpeg yolu (Windows için varsayılan: bin/ffmpeg.exe)
FFMPEG_PATH=bin/ffmpeg.exe

# Video ayarları
DEFAULT_VIDEO_WIDTH=1920
DEFAULT_VIDEO_HEIGHT=1080
DEFAULT_VIDEO_FPS=30
DEFAULT_VIDEO_BITRATE=5M

# Ses ayarları
DEFAULT_AUDIO_BITRATE=192k
DEFAULT_TTS_VOICE=onyx
DEFAULT_TTS_SPEED=1.0

# Cache ayarları
CACHE_DURATION=21600  # 6 saat (saniye cinsinden)
CACHE_DIR=cache/pexels

# Çıktı dizinleri
VIDEO_OUTPUT_DIR=output
TEMP_DIR=temp

# Video Kalitesi (720p, 1080p, 1440p, 2160p)
VIDEO_QUALITY=1080p

# Video Kodlama
VIDEO_PRESET=medium  # ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
VIDEO_CRF=23        # 0-51, düşük=yüksek kalite (18-28 arası önerilen)

# Dil Ayarı
DEFAULT_LANGUAGE=tr
